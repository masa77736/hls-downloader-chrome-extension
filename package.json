{
  "name": "hls-downloader-chrome-extension",
  "version": "1.2.1",
  "private": true,
  "scripts": {
    "start": "NODE_ENV=development webpack -w --config config/webpack.config.dev.js",
    "prebuild": "rm -rf build",
    "build": "NODE_ENV=production webpack --config config/webpack.config.prod.js",
    "prepack": "npm run build",
    "pack": "zip -r extension.zip build",
    "preupload": "npm run pack",
    "upload": "webstore upload --source extension.zip --extension-id $EXTENSION_ID --client-id $CLIENT_ID --client-secret $CLIENT_SECRET --refresh-token $REFRESH_TOKEN",
    "prewebstore-publish": "npm run upload",
    "webstore-publish": "webstore publish --client-id $CLIENT_ID",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/runtime": "^7.0.0",
    "@types/chrome": "0.0.64",
    "history": "^4.7.2",
    "m3u8-parser": "^4.2.0",
    "normalizr": "^3.2.4",
    "object-assign": "4.1.1",
    "promise": "8.0.1",
    "ramda": "^0.25.0",
    "react": "^16.3.2",
    "react-chrome-redux": "^1.5.1",
    "react-dom": "^16.3.2",
    "react-redux": "^5.0.7",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^5.0.0-alpha.9",
    "react-styled-flexboxgrid": "^2.2.0",
    "redux": "^4.0.0",
    "redux-saga": "^0.16.0",
    "reselect": "^3.0.1",
    "resolve": "1.6.0",
    "styled-components": "^3.2.6",
    "typeface-open-sans": "0.0.54",
    "url-loader": "0.6.2",
    "uuid": "^3.2.1",
    "whatwg-fetch": "2.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@storybook/react": "3.4.11",
    "babel-core": "6.26.3",
    "babel-eslint": "7.2.3",
    "babel-jest": "20.0.3",
    "babel-loader": "^8.0.0",
    "babel-preset-env": "1.7.0",
    "babel-preset-react": "6.24.1",
    "case-sensitive-paths-webpack-plugin": "2.1.1",
    "chalk": "^1.1.3",
    "chrome-webstore-upload-cli": "^1.1.1",
    "copy-webpack-plugin": "^4.5.2",
    "dotenv": "4.0.0",
    "dotenv-expand": "4.2.0",
    "eslint": "4.18.2",
    "eslint-config-react-app": "^2.1.0",
    "eslint-loader": "1.9.0",
    "eslint-plugin-flowtype": "2.39.1",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-jsx-a11y": "5.1.1",
    "eslint-plugin-react": "7.4.0",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "1.1.5",
    "fs-extra": "3.0.1",
    "html-webpack-plugin": "2.29.0",
    "jest": "20.0.4",
    "raf": "3.4.0",
    "react-dev-utils": "^5.0.1",
    "redux-devtools-extension": "^2.13.2",
    "remote-redux-devtools": "^0.5.13",
    "sw-precache-webpack-plugin": "0.11.4",
    "uglifyjs-webpack-plugin": "^1.1.0",
    "webpack": "3.11.0",
    "webpack-manifest-plugin": "1.3.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,mjs}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node",
      "mjs"
    ]
  },
  "eslintConfig": {
    "extends": "react-app",
    "env": {
      "webextensions": true
    }
  },
  "browserslist": "Chrome > 66"
}
